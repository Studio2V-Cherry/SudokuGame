<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:SudokuGame.Viewmodel"
             x:DataType="local:BaseViewmodel"
             x:Class="SudokuGame.Pages.StarterPage">
    <VerticalStackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
        <Button Margin="0,10"
                x:Name="historyOption"
                HorizontalOptions="FillAndExpand"
                Text="Resume"
                Clicked="resumeSudukoGame" />
        <Button Margin="0,10"
                HorizontalOptions="FillAndExpand"
                Text="Play Suduko"
                Clicked="playSudukoGame" />
        <Button Margin="0,10"
                HorizontalOptions="FillAndExpand"
                Text="Levels"
                Clicked="levelsSudukoGame" />
    </VerticalStackLayout>
</ContentPage>